extends layout

block content
  .w3-card-4
    header.w3-container.w3-teal
      h1 Espécie: #{plantas[0].especie}, Nome Científico: #{plantas[0].nomecientifico}
        
    
    a(href="/")
        button.w3-btn.w3-teal.w3-mb-2 Voltar ao Menu Inicial

    .w3-container
      table.w3-table-all
        tr
          th _id
          th Freguesia
          th Espécie
          th Estado
          th Número de intervenções 
        each p in plantas
            tr
              td 
                a(href="/" + p._id)= p._id
              td= p.freguesia
              td
                a(href="/especies/" + p.especie)= p.especie
              td= p.estado
              td= p.numintervencoes
            

    footer.w3-container.w3-teal
      h5 Generated by LykiFyar for Exame-Época-Normal::EngWeb2023 in #{d}



