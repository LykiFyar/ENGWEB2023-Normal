extends layout

block content
  .w3-card-4
    header.w3-container.w3-teal
      h1 Registo da Planta: #{p.id}
        
    a(href="/")
      button.w3-btn.w3-teal.w3-mb-2 Voltar ao Menu Inicial

    .w3-container
        ul.w3-ul.w3-card-4
            li #[b ID:] #{p._id}
            li #[b Número de Registo:] #{p.numregisto}
            li #[b Código da Rua:] #{p.codrua}
            li #[b Rua:] #{p.rua}
            li #[b Local:] #{p.local}
            li #[b Freguesia:] #{p.freguesia}
            li #[b Espécie:] #{p.especie}
            li #[b Nome científico:] #{p.nomecientifico}
            li #[b Origem:] #{p.origem}
            li #[b Data de Plantação:] #{p.dataplantacao}
            li #[b Estado:] #{p.estado}
            li #[b Caldeira:] #{p.caldeira}
            li #[b Tutor:] #{p.tutor}
            li #[b Implantação:] #{p.implantacao}
            li #[b Gestor:] #{p.gestor}
            li #[b Data de atualização:] #{p.dataupdate}
            li #[b Número de intervenções:] #{p.numintervencoes}
          

    footer.w3-container.w3-teal
      h5 Generated by LykiFyar for Exame-Época-Normal::EngWeb2023 in #{d}



